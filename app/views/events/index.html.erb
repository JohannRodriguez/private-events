<h2><%= Time.now.to_date %></h2>
<h1>Upcoming Events</h1>
<% Event.upcoming.each do |e| %>
  <h4>Created by: <%= e.user.username %></h4>
  <h4><%= link_to full_event_name(e), events_show_path(:id => e.id) %></h4>
  <br>
<% end %>
<h1>Previous Events</h1>
<% Event.previous.each do |e| %>
  <h4>Created by: <%= e.user.username %></h4>
  <h4><%= link_to full_event_name(e), events_show_path(:id => e.id) %></h4>
  <br>
<% end %>
